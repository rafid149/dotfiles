\newcommand{\tcbbluetheorem}[3]{
	\theoremstyle{thmbluebox}
	\newtheorem{#1}{#2}[#3]
	\newtheorem*{#1*}{#2}
	\tcolorboxenvironment{#1}{
		colback=CornflowerBlue!5,colframe=RoyalBlue
	}
	\tcolorboxenvironment{#1*}{
		colback=CornflowerBlue!5,colframe=RoyalBlue
	}
}

\newcommand{\tcbtealtheorem}[3]{
	\theoremstyle{thmtealbox}
	\newtheorem{#1}{#2}[#3]
	\newtheorem*{#1*}{#2}
	\tcolorboxenvironment{#1}{
		colback=Teal!5,colframe=Teal,left=5pt,
	}
	\tcolorboxenvironment{#1*}{
		colback=Teal!5,colframe=Teal,left=5pt
	}
}

\newcommand{\tcborangetheorem}[3]{
	\theoremstyle{thmorangebox}
